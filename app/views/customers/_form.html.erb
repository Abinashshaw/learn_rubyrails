<%= form_for @customer, presence: true do |f| %>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
  <br /><br />
  <%= f.label :email %><br />
  <%= f.text_field :email %>
  <br /><br />
  <%= f.submit %>
  <p>
    [ <%= link_to "Back to listing customers", customers_path %> ]
  </p>
<% end %>