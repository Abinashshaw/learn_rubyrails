<%= render 'shared/errors', obj: @image %>
<%= form_for @image, validate: true do |f| %>
  <%= f.label :name %><br />
  <%= f.text_field :name, required: true %>
  <br /><br />
  <%= f.label :picture %><br />
  <%= f.file_field :picture, required: true %>
  <br /><br />
  <%= f.label :caption %><br />
  <%= f.text_field :caption %>
  <br /><br />
  <%= f.submit %>
<% end %>
<p>
  [ <%= link_to "Back to Listing Images", images_path %> ]
</p>